@model IEnumerable<college_project.Models.StudentRegistration>

@{
    ViewData["Title"] = "Student Applications";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 page-header">
        <div class="d-flex align-items-center">
            <h1 class="h2 mb-0">Enrollment Applications</h1>
            <span class="certificate-count-badge">@Model.Count()</span>
        </div>
        <a asp-action="ExportToCSV" class="btn btn-success shadow-sm px-4 py-2">
            <i class="bi bi-file-earmark-spreadsheet me-2"></i>Export Excel/CSV
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 px-4">#ID</th>
                            <th class="py-3 px-4">Student Name</th>
                            <th class="py-3 px-4">Phone</th>
                            <th class="py-3 px-4">Major</th>
                            <th class="py-3 px-4">Date</th>
                            <th class="py-3 px-4">Attachments</th>
                            <th class="py-3 px-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-4">@item.Id</td>
                                <td class="px-4 fw-bold text-dark">@item.FullName</td>
                                <td class="px-4 text-muted small">@item.PhoneNumber</td>
                                <td class="px-4">
                                    <span class="badge bg-primary bg-opacity-10 text-primary">@item.Major</span>
                                </td>
                                <td class="px-4 text-muted">@item.RegistrationDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="px-4">
                                    <div class="d-flex gap-2">
                                        @if (!string.IsNullOrEmpty(item.QualificationImagePath))
                                        {
                                            <a href="@item.QualificationImagePath" target="_blank" class="btn btn-sm btn-outline-secondary" title="Qualification"><i class="bi bi-mortarboard"></i></a>
                                        }
                                        @if (!string.IsNullOrEmpty(item.IdentityImagePath))
                                        {
                                            <a href="@item.IdentityImagePath" target="_blank" class="btn btn-sm btn-outline-secondary" title="Identity"><i class="bi bi-person-badge"></i></a>
                                        }
                                        @if (!string.IsNullOrEmpty(item.PersonalPhotoPath))
                                        {
                                            <a href="@item.PersonalPhotoPath" target="_blank" class="btn btn-sm btn-outline-secondary" title="Photo"><i class="bi bi-person-circle"></i></a>
                                        }
                                    </div>
                                </td>
                                <td class="px-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1"><i class="bi bi-eye"></i> Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted fs-1"></i>
                    <p class="text-muted mt-2">No applications found yet.</p>
                </div>
            }
        </div>
    </div>
</div>