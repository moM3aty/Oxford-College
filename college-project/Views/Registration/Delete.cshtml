@model college_project.Models.StudentRegistration

@{
    ViewData["Title"] = "Delete Application";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion</h4>
                </div>
                <div class="card-body text-center py-5">
                    <h5 class="card-title mb-4">Are you sure you want to delete this application?</h5>
                    <h3 class="text-primary mb-4">@Model.FullName</h3>
                    <p class="text-muted">
                        This will permanently remove the student's data and all uploaded documents (Photos, Certificates).
                        <br />
                        <span class="text-danger fw-bold">This action cannot be undone.</span>
                    </p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                            <button type="submit" class="btn btn-danger px-4">Yes, Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>