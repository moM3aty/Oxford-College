@model college_project.Models.Certificate

@{
    ViewData["Title"] = "Delete Certificate";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h1>Delete Certificate</h1>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div>
        <h4>Certificate</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Serial Number</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.SerialNumber)</dd>
            <dt class="col-sm-2">Preview</dt>
            <dd class="col-sm-10">
                <img src="@Model.CertificateImagePath" style="max-width: 400px;" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
